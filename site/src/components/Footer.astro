---
import Default from '@astrojs/starlight/components/Footer.astro';
---

<Default {...Astro.props}><slot /></Default>

<footer class="site-author">
  <p>
    Built by <a href="https://patrykgolabek.dev" target="_blank" rel="noopener">Patryk Golabek</a>
    &mdash; Cloud-Native Software Architect
  </p>
  <nav class="more-projects" aria-label="More projects by Patryk Golabek">
    <span>More projects:</span>
    <a href="https://jobflow.patrykgolabek.dev" target="_blank" rel="noopener">JobFlow</a>
    <span class="sep">&middot;</span>
    <a href="https://financial-data-extractor.patrykgolabek.dev" target="_blank" rel="noopener">Financial Data Extractor</a>
  </nav>
</footer>

<style>
  .site-author {
    text-align: center;
    padding: 1rem 0 1.5rem;
    font-size: var(--sl-text-xs);
    color: var(--sl-color-gray-3);
    border-top: 1px solid var(--sl-color-gray-6);
    margin-top: 0;
  }
  .site-author p {
    margin: 0;
  }
  .site-author a {
    color: var(--sl-color-text-accent);
    text-decoration: none;
  }
  .site-author a:hover {
    text-decoration: underline;
  }
  .more-projects {
    margin-top: 0.5rem;
    font-size: var(--sl-text-xs);
    color: var(--sl-color-gray-4);
  }
  .more-projects a {
    color: var(--sl-color-gray-2);
  }
  .more-projects a:hover {
    color: var(--sl-color-text-accent);
  }
  .more-projects .sep {
    margin: 0 0.35rem;
    color: var(--sl-color-gray-5);
  }
</style>
